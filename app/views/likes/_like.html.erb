<% if current_user != @post.user %>
  <% if post.liked_by?(current_user) %>
    <%= link_to " 保存済み", post_likes_path(post), method: :delete, remote: true, class: "btn btn-warning btn-lg btn-block fas fa-star" %>
  <% else %>
    <%= link_to " お気に入りに保存", post_likes_path(post), method: :post, remote: true, class: "btn btn-light btn-lg btn-block far fa-star" %>
  <% end %>
<% end %>