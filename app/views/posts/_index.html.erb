<% posts.each do |post| %>
  <div class="card my-5 p-3">
    <div class="row no-gutters">
      <div data-turbolinks="false", class="col-md-4 my-auto">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, width: "100%", height:"auto", format: "jpeg", fallback: "no_image.jpg", class: "img" %>
        <% end %>
      </div>
      <div class="col-md-8 my-auto">
        <div class="card-body col-md">
          <div class="row">
            <div class="col-sm-12">
              <h4 data-turbolinks="false", class="card-title font-weight-bold">
                <%= link_to post_path(post.id), class: "title-link" do %>
                  <%= post.title %>
                <% end %>
              </h4>
            </div>
            <div class="user-info">
              <div class="col-sm-12">
                <p class="card-text">
                  <%= post.caption.truncate(24) %>
                </p>
              </div>
              <div class="col-sm-12">
                <p class="card-text">
                  <i class="fas fa-map-marker-alt"></i>
                  <%= post.prefecture_name %>
                </p>
              </div>
              <div class="col-sm-12">
                <p class="card-text">
                  <%= post.created_at.strftime('%Y年%-m月%-d日')%>
                  &nbsp|&nbsp
                  <%= link_to user_path(post.user), class: "link" do %>
                    <%= post.user.name %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>