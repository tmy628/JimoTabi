<div class="row">
  <div class="col-md-12 mt-3">
    <h4 class="text-center font_space">タグ一覧</h4>
  </div>
  <div class="col-md-12 m-1">
    <% tag_list.each do |list| %>
      <span>
        <%= link_to list.tag_name, tag_posts_path(tag_id: list.id) %>
        <%= "(#{list.posts.count})" %>
      </span>
    <% end %>
  </div>
</div>
