<div class="card col-sm-6 mx-auto my-5">
  <div class="card-body">
    <h2 class="mt-1 mb-3  font_space"><%= t('.sign_in') %></h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true,  placeholder: "example@example.com", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_in'), class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

    <hr class="border-dark">

    <div>
      <%= link_to "アカウントをお持ちでない方", new_registration_path(resource_name), class: 'btn btn-info btn-block' %>
    </div>
  </div>
</div>
