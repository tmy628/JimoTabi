<div class="container my-4">
  <div class="row">
    <div class="col-md-3">
      <div>
        <%= render 'users/info', user: current_user %>
      </div>
      <div>
        <%= render 'posts/tag_list', tag_list: @tag_list %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div class="col-md text-center">
          <h4 class="mt-3 mt-3 font_space search-result-head">
            <%= "─ " %><%= @search %>
            <span class="search-result-head-text">
              <%= " ─ の検索結果" %>
            </span>
          </h4>
        </div>
      </div>
      <div class="search-result-number">
          <%= "1-#{@posts.count}件表示" %>
      </div>
      <% @posts.each do |post| %>
      <div class="card my-3 p-3">
        <div class="row no-gutters">
          <div class="col-md-4 my-auto">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, width: "100%", height:"auto", format: "jpeg", fallback: "no_image.jpg", class: "img" %>
            <% end %>
          </div>
          <div class="col-md-8 my-auto">
            <div class="card-body col-md">
              <div class="row">
                <div class="col-sm-12">
                  <h4 class="card-title font-weight-bold">
                    <%= link_to post_path(post.id), class: "title-link" do %>
                      <%= post.title %>
                    <% end %>
                  </h4>
                </div>
                <div class="user-info">
                  <div class="col-sm-12">
                    <p class="card-text"><%= post.caption.truncate(24) %></p>
                  </div>
                  <div class="col-sm-12">
                    <p class="card-text">
                      <%= post.created_at.strftime('%Y年%-m月%-d日')%>
                      &nbsp|&nbsp
                      <%= link_to user_path(post.user), class: "link" do %>
                      <%= post.user.name %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="mx-auto">
          <p class="d-flex align-items-center"><%= paginate @posts %></p>
        </div>
      </div>
    </div>
  </div>
</div>