<div class="container my-4">
  <%= render 'layouts/alert' %>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-3">
      <div>
        <%= render 'info', user: @user %>
      </div>
      <div>
        <%= render 'posts/tag_list', tag_list: @tag_list %>
      </div>
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 offset-lg-1">
      <div class="row">
        <div class="col-md text-center">
          <h4 class="mt-3 font_space"><%= link_to '投稿一覧', user_path, class: "index-link" %></h4>
        </div>
        <div class="col-md text-center">
          <h4 class="mt-3 font_space">お気に入り投稿一覧</h4>
        </div>
      </div>

      <% if @likes.length != 0 %>
        <% @likes.each do |like| %>
          <div class="card my-3 p-3">
            <div class="row no-gutters">
              <div data-turbolinks="false", class="col-md-4 my-auto">
                <%= link_to post_path(like.post.id) do %>
                  <%= attachment_image_tag like.post, :image, width: "100%", height:"auto", format: "jpeg", fallback: "no_image.jpg", class: "img" %>
                <% end %>
              </div>
              <div class="col-md-8 my-auto">
                <div class="card-body col-md">
                  <div class="row">
                    <div class="col-sm-12">
                      <h4 data-turbolinks="false", class="card-title font-weight-bold">
                        <%= link_to post_path(like.post.id), class: "title-link" do %>
                          <%= like.post.title %>
                        <% end %>
                      </h4>
                    </div>
                    <div class="user-info">
                      <div class="col-sm-12">
                        <p class="card-text"><%= like.post.caption.truncate(24) %></p>
                      </div>
                      <div class="col-sm-12">
                        <p>
                          <%= like.post.created_at.strftime('%Y年%-m月%-d日')%>
                          &nbsp|&nbsp
                          <%= link_to user_path(like.post.user), class: "link" do %>
                            <%= like.post.user.name %>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="card my-5 p-3">
          <div class="text-center">
            お気に入りはまだ保存されていません
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="mx-auto">
          <p class="d-flex align-items-center"><%= paginate @likes %></p>
        </div>
      </div>
    </div>
  </div>
</div>